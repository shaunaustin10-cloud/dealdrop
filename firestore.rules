rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the user is the owner of the document
    function isOwner(resource) {
      return resource.data.createdBy == request.auth.uid;
    }

    // --- Marketplace Deals Collection ---
    match /artifacts/{appId}/publicDeals/{dealId} {
      allow read: if true; // Publicly readable
      allow create: if request.auth != null; // Allow any logged in user to post
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.sellerId || 
        !('sellerId' in resource.data) || 
        get(/databases/$(database)/documents/artifacts/$(appId)/profiles/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // --- User Profiles Collection ---
    // Allow public read, but only the user can write their own profile
    match /artifacts/{appId}/profiles/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // --- Inquiries Subcollection ---
    match /artifacts/{appId}/users/{userId}/inquiries/{inquiryId} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- Private Deals Collection (New Internal Tool) ---
    match /artifacts/{appId}/users/{userId}/deals/{dealId} {
      allow read: if request.auth.uid == userId || resource.data.shareable == true || resource.data.publiclyVisible == true;
      allow write: if request.auth.uid == userId;
    }

    // Support collectionGroup queries for shared deals
    match /{path=**}/deals/{dealId} {
      allow read: if resource.data.shareable == true || (request.auth != null && request.auth.uid == resource.data.createdBy);
    }
    
    // --- Property Cache Collection ---
    match /property_cache/{cacheId} {
      allow read, write: if isAuthenticated();
    }
    
    // --- Platform Stats ---
    match /artifacts/{appId}/stats/{statId} {
      allow read: if true;
    }
    
    // --- Stripe Extensions Collections (Standard Rules) ---
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }
      match /tax_rates/{id} {
        allow read: if true;
      }
    }
  }
}
