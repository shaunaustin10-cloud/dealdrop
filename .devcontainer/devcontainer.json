{
  "name": "Dealdrop Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [5173, 9099, 5001, 8080, 9199],
  "portsAttributes": {
    "5173": {
      "label": "Vite Web Server",
      "visibility": "public"
    },
    "9099": {
      "label": "Firebase Auth Emulator",
      "visibility": "public"
    },
    "8080": {
      "label": "Firestore Emulator",
      "visibility": "public"
    },
    "5001": {
      "label": "Functions Emulator",
      "visibility": "public"
    },
    "9199": {
      "label": "Storage Emulator",
      "visibility": "public"
    }
  },
  "postCreateCommand": "npm install && npm install -g firebase-tools @google/gemini-cli"
}
